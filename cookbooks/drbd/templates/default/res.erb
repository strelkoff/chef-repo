# Generated by Chef for <%= node['fqdn'] %>

resource <%= @resource %> {
  device    <%= node['drbd']['dev'] %>;
  disk      <%= node['drbd']['disk'] %>;
  meta-disk internal;
  on <%= node.name %> {
    address   <%= node['drbd']['local_ip'] %>:<%= node['drbd']['port'] %>;
  }
  on <%= node['drbd']['remote_host'] %> {
    address   <%= node['drbd']['remote_ip'] %>:<%= node['drbd']['port'] %>;
  }
}
